<p id="notice"><%= notice %></p>

<h1>Private Messages</h1>

<table>
  <thead>
    <tr>
      <th width="90%>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.includes(:user).each do |post| %>
      <tr>
        <td>
		<% if post.notified %>
		 <h6><%= link_to markdown(post.text), user_private_post_path(params[:user_id],post.id) %> by <%= link_to post.user.name, user_path(post.user_id) %> at <%= post.updated_at %></h6>
		 <% else%>
         <h6><b><%= link_to markdown(post.text), user_private_post_path(params[:user_id],post.id) %> by <%= link_to post.user.name, user_path(post.user_id) %> at <%= post.updated_at %></b></h6>
         <% end %>
		 </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= will_paginate(@posts) %>

