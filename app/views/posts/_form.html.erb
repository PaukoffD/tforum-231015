<%= simple_form_for   [:topic,@post] do |f| %>
   <%= f.error_notification %>
   <%= f.input :text, label: "Post:", class: 'form-control', rows: 6,  :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'Full'}} %>
   <%= f.button :submit %>
 <% end %>
 
 <%= link_to 'Back', topic_path(@topic.id) %>
