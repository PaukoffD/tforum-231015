<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th width="90%>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.includes(:user).each do |post| %>
      <tr>
        <td><%= markdown(post.text) %> by <%= link_to post.user.name, user_path(post.user_id) %> at <%= post.updated_at %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>
