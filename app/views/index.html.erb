<%= link_to 'Скрытый форум', forum_topics_path(:forum,@topic), :class => "btn btn-primary" %>


<h1>Listing group</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
       
        <td><%= link_to 'Show', group, :class => "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_group_path(group), :class => "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } , :class => "btn btn-primary"%></td>
        <td><%= link_to 'Добавить в группу', addingroup_path(group), :class => "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New group', new_group_path, :class => "btn btn-primary"%>
