
<h1>DUMMY RUBY FORUM</h1>

<table class="table  cellspacing='0'">
  <thead>
    <tr>
	  <th width="30%">Forum</th>
	  <th width="49%">Post</th>
	  <th width="7%">Topics</th>
      <th width="7%">Replies</th>
	  <th width="7%">Views</th>
     </tr>
  </thead>

  
  
  
  <tbody>
  <tr class="info">
    <% @forums.each do |forum| %>
      <tr>
        

		<td><h4><%= link_to h(forum.name), forum_path(forum.to_param) %> </h4>

        <%=h forum.description %></td>
		
		<td class="right"><% if forum.last_topic %>
		<h4><%= link_to h(forum.last_topic.subject), topic_path(forum.last_topic.subject.to_param) %> </h4>
		<%= distance_of_time_in_words_to_now forum.last_topic.last_post_at %> ago by 
		<%= link_to forum.last_topic_user, user_path(forum.last_topic.user_id) %>
		<% else %>no posts<% end %></td>
		
		<td class="right">
		<h4><span class="badge"><%= forum.topics.count %></span></a> topics</h4>
		</td>
		
		<td class="right">
		<h4><span class="badge"><%= forum.count_post-forum.topics.count %></span></a> replies</h4>
		</td>
		
		<td class="right">
		<h4><span class="badge"><%= forum.count_reply %></span></a> views</h4>
		</td>

      </tr>
    <% end %>
  </tbody>
</table>


<br>

<% if user_signed_in? %>
 <% if current_user.admin %>
  <%= link_to 'New Forum', new_forum_path, :class => "btn btn-primary" %>
 <% end %> 
<% end %>
