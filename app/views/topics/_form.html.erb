<%= simple_form_for   [@forum, @topic] do |f| %>
   <%= f.error_notification %>
  <%=  f.input :subject, label: "Topic title: " %>
  <%= f.hidden_field :forum_id, :value => @topic.forum_id %>
  
   <%= f.simple_fields_for :posts do |q| %>
    <%= q.hidden_field :user_id, :value => current_user.id %>
    <%=  q.input :text, label: "Content:", class: 'form-control', rows: 6,  :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'Full'}}    %>
   <% end %>
   <%= f.button :submit %>
 <% end %>
