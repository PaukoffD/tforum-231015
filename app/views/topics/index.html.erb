<table class="table table-striped table-hover ">

 <thead>
    <tr>
	<th width="60%">Topic Title</th>
    <th width="10%">Replies</th>
    <th width="30%">Last Post</th>
     </tr>
  </thead>
  
    <tbody>
  <% for topic in @topics.includes(:posts, :user) %>
    <tr>
      <td><%= link_to h(topic.subject), topic_path(topic.id) %><%=  topic.user.id %>
      <td><%= topic.posts.count-1  %></td>
	  <td>  by  <p><%= link_to topic.user.name, root_path, :class => "text-success"%></p></td>
	  
      
    </tr>
  <% end %>
   </tbody>
</table>


 
<p><%= link_to "Back", root_path, :class => "btn btn-primary"%></p>
<%= will_paginate(@topics) %>