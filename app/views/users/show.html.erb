<h1>User: <%= @user.name  %></h1>
<ul>
    <div class="row">
	<div class="col-sm-4"><div class="left"></div>
	 <li>Name: <%= @user.name %></li>
     <li>Registered: <%= @user.created_at %></li>
	 <li>Posts: <%= @user.count_message %></li>
	 </div>
	<div class="col-sm-4"></div>
                <%= image_tag(@user.avatar.url(:medium)) %>
            
 </ul>
<% if user_signed_in? %>
 <%= link_to 'Write Private', new_user_private_post_path(@user.id), :class => "btn btn-primary", :user => @user %>
<% end %>